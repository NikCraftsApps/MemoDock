<Window x:Class="MemoDock.Views.TimelineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History - MemoDock" Height="520" Width="760"
        WindowStartupLocation="CenterOwner">
    <Grid Background="{StaticResource BgBrush}">
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Versions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource Card}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" MaxHeight="96"/>
                                    <TextBlock Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,6,0,0"
                                               Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                                    <Button Style="{StaticResource ActionButton}" Content="Copy"
                                            Command="{Binding DataContext.CopyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,10,0"/>
                                    <Button Style="{StaticResource PrimaryButton}" Content="Restore"
                                            Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
